<div class="container" data-controller="booking-subscription"
  data-booking-subscription-booking-id-value="<%= @booking.id %>">
  <h1>#<%= @booking.experience.name %></h1>
  <div class="messages" data-booking-subscription-target="messages">
    <% @booking.messages.each do |message| %>
      <div id="message-<%= message.id %>">
        <small>
          <strong><%= message.user.first_name %> <%= message.user.last_name %></strong>
          <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <p><%= message.content %></p>
      </div>
    <% end %>
  </div>
  <%= simple_form_for [@booking, @message],
  html: {class: "d-flex"} do |f|
%>
    <%= f.input :content,
    label: false,
    placeholder: "Message about #{@booking.experience.name}",
    wrapper_html: {class: "flex-grow-1"}
  %>
    <%= f.submit "Send", class: "btn btn-primary mb-3" %>
  <% end %>
</div>
