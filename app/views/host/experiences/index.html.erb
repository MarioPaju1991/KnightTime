<div class="container">
  <h1 class="mt-3">My Hosted Experiences</h1>
  <% if @experiences.any? %>
    <div class="cards">
      <% @experiences.each do |experience| %>
        <div class="border-animated card-border">
          <div class="card-trip mx-3">
            <%= experience.photo.key.present? ? cl_image_tag(experience.photo.key) : image_tag("super_mario_arena.gif") %>
            <div class="card-trip-infos">
              <div>
                <h2><%= experience.name %></h2>
                <p><i class="fa-solid fa-map-pin" style="color: red;"></i> <%= experience.address %></p>
              </div>
              <div>
                <p class="badge rounded-pill bg-info text-dark mb-1"><%= experience.category %></p>
                <h2 class="card-trip-pricing text-end">Â¥<%= experience.price.to_i %></h2>
              </div>
            </div>
            <div class="d-grid gap-2">
              <%= link_to "Edit",
              edit_experience_path(experience), class:"btn btn-success btn-sm mx-2" %>
              <%= link_to "Delete",
              host_experience_path(experience),
              data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
              class:"btn btn-danger btn-sm mx-2 mb-2" %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p>You haven't listed any experiences yet!</p>
    <% end %>
  </div>
</div>
