<div class="container">
  <h2 class="mt-2">My bookings</h2>
  <div>
    <% @bookings.each do |booking| %>
      <div class="big-card-border big-border-animated">
        <div class="card-product-host-bookings row">
          <div class="col-3">
            <%= cl_image_tag booking.experience.photo.key %>
          </div>
          <div class="col-4">
            <h3 class="ms-5 pt-2 mt-4 mb-4"><%= booking.experience.name %> - Â¥<%= booking.total_price.to_i %></h3>
            <p class="mb-2 ms-5"><i class="fa-solid fa-map-pin" style="color: red;"></i> <%= booking.experience.address %></p>
          </div>
          <div class="col-3 text-end">
            <p class="badge rounded-pill bg-info text-white mb-4 mt-4"><%= booking.status %></p>
            <p class="m-0">From <%= booking.start_date %></p>
            <p class="m-0">to <%= booking.end_date %></p>
          </div>
          <div class="col-2">
            <div class="confirm_or_reject text-end">
              <div class="d-flex">
                <% if booking.pending? %>
                  <%= simple_form_for booking, url: host_booking_path(booking) do |f| %>
                    <%= f.input :status, as: :hidden, input_html: { value: 'confirmed'} %>
                    <%= f.submit 'Accept', class: 'btn btn-success' %>
                  <% end %>
                  <%= simple_form_for booking, url: host_booking_path(booking) do |f| %>
                    <%= f.input :status, as: :hidden, input_html: { value: 'rejected'} %>
                    <%= f.submit 'Reject', class: 'btn btn-light' %>
                  <% end %>
                <% else %>
                  <p><%= booking.status %></p>
                <% end %>
              </div>
              <button class="btn my-3"><i class="fa-solid fa-circle-check fa-2xl" style="color: green;"></i></button>
              <button class="btn my-3"><i class="fa-solid fa-circle-xmark fa-2xl" style="color: red;"></i></button>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
